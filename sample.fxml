
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<VBox fx:controller="sample.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center">
    <TextArea fx:id="chatArea" editable="false"/>
    <TextField fx:id="enterText" text="Введите сообщение..." onMouseClicked="#deleteText" onAction="#sendMessage"/>
    <Button fx:id="sendButton" text="Отправить" onAction="#sendMessage" />
</VBox>